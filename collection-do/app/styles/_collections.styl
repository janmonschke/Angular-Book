collection-inner-element-width = 142px

.collections
  width 200px
  float left
  display inline-box

  ul
    @extend .transparent-rounded-border
    list-style-type none
    overflow hidden

    li
      display block
      border-top 1px solid rgba(255,255,255,.1)
      border-bottom 1px solid black
      background-color #222
      margin: 0

      &:first-child
        @extend .rounded-top

      &:last-child
        @extend .rounded-bottom

      &:hover
        background-color #FC7D5E

        span
          color white

      .collection-row
        padding 15px 10px 10px

        a
          text-decoration none
          color rgba(255,255,255,.7)
          display inline-block
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          max-width collection-inner-element-width

        span
          float right
          cursor pointer

      .collection-row-editing
        padding 10px 10px 10px

        form, input
          display inline-block
          margin 0
        input
          width collection-inner-element-width - 15px

        span
          padding-left 5px
          color white
        

  .add-collection
    @extend .transparent-rounded-border

    form
      margin-bottom 0

      input, input:focus
        @extend .rounded-top
        @extend .rounded-bottom
        width 180px
        height 25px
        margin-bottom 0
        border-radius 2px
        box-shadow inset 0 0 3px rgba(0,0,0,.4), 0 1px 1px rgba(255,255,255,.2), 0 -1px 0px rgba(0,0,0,.4)
        text-indent 4px
        border 1px solid black
        background-color #333
        font-size 13px
        color #ddd